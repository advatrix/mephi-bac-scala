# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()

# User data and auth

+ nocsrf
POST    /signup                     controllers.AuthController.signUp()
+ nocsrf
POST    /login                      controllers.AuthController.login()
+ nocsrf
POST    /logout                     controllers.AuthController.logout()

GET     /api/get-user-data          controllers.UserController.getUserData
+ nocsrf
POST    /api/update-user-data       controllers.UserController.updateUserData()

# Notifications

GET     /api/get-notifications-count    controllers.NotificationController.getNotificationsCount
GET     /api/get-notifications          controllers.NotificationController.getNotifications(offset: Option[Int], limit: Option[Int])
+ nocsrf
POST    /api/set-notification-read      controllers.NotificationController.setNotificationRead()

# Role model

GET     /api/get-permissions            controllers.RoleController.getPermissions

# Documents

GET     /api/get-documents              controllers.DocumentController.getDocuments
GET     /api/get-document-by-id         controllers.DocumentController.getDocumentById(id: Int)
+ nocsrf
POST    /api/create-document            controllers.DocumentController.createDocument
+ nocsrf
POST    /api/save-document              controllers.DocumentController.saveDocument
+ nocsrf
POST    /api/send-document              controllers.DocumentController.sendDocument
+ nocsrf
POST    /api/approve-document           controllers.DocumentController.approveDocument
+ nocsrf
POST    /api/reject-document            controllers.DocumentController.rejectDocument

# Data synchronization

+ nocsrf
POST    /sync/insert                    controllers.DataSyncController.insert
+ nocsrf
POST    /sync/update                    controllers.DataSyncController.update
+ nocsrf
POST    /sync/write                     controllers.DataSyncController.write
GET     /sync/read                      controllers.DataSyncController.read

# For testing purposes
GET     /index                      controllers.UserController.index
GET     /test/validate-document         controllers.DocumentController.fValidateDocument

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
