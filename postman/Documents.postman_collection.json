					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status test\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"const json = pm.response.json();\r",
							"\r",
							"pm.test(\"limited_int_field == 100\", () => {\r",
							"    pm.expect(json.contents.limited_int_field).eql(100);\r",
							"});\r",
							"\r",
							"pm.test(\"username\", () => {\r",
							"    pm.expect(json.contents.username).eql(\"user1\");\r",
							"});\r",
							"\r",
							"pm.test(\"array of objects is empty\", () => {\r",
							"    pm.expect(json.contents.array_of_objects).eql(null);\r",
							"});\r",
							"\r",
							"pm.collectionVariables.set(\"document_id\", json.id);\r",
							"\r",
							""
